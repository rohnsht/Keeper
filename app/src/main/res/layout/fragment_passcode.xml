<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="Enter Passcode"
        android:textSize="@dimen/text_size_large" />

    <EditText
        android:id="@+id/tv_passcode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:enabled="false"
        android:hint="Passcode"
        android:inputType="numberPassword"
        android:maxLength="6"
        android:textAlignment="center"
        android:textSize="@dimen/text_size_exlarge" />

    <TableLayout
        android:id="@+id/dialpad"
        android:layout_width="match_parent"
        android:layout_height="0px"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:layout_weight="1"
        android:divider="@drawable/dialpad_divider"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_horizontal_margin"
        android:paddingLeft="@dimen/activity_vertical_margin"
        android:paddingRight="@dimen/activity_vertical_margin"
        android:paddingTop="@dimen/activity_horizontal_margin"
        android:showDividers="middle">

        <TableRow
            android:layout_height="0px"
            android:layout_weight="1"
            android:divider="@drawable/dialpad_divider"
            android:showDividers="middle|end|beginning">

            <Button
                android:id="@+id/btn_one"
                style="@style/DialpadButtonStyle"
                android:text="1"
                android:textSize="@dimen/text_size_exlarge" />

            <Button
                android:id="@+id/btn_two"
                style="@style/DialpadButtonStyle"
                android:text="2"
                android:textSize="@dimen/text_size_exlarge" />

            <Button
                android:id="@+id/btn_three"
                style="@style/DialpadButtonStyle"
                android:text="3"
                android:textSize="@dimen/text_size_exlarge" />

        </TableRow>

        <TableRow
            android:layout_height="0px"
            android:layout_weight="1"
            android:divider="@drawable/dialpad_divider"
            android:showDividers="middle|end|beginning">

            <Button
                android:id="@+id/btn_four"
                style="@style/DialpadButtonStyle"
                android:text="4"
                android:textSize="@dimen/text_size_exlarge" />

            <Button
                android:id="@+id/btn_five"
                style="@style/DialpadButtonStyle"
                android:text="5"
                android:textSize="@dimen/text_size_exlarge" />

            <Button
                android:id="@+id/btn_six"
                style="@style/DialpadButtonStyle"
                android:text="6"
                android:textSize="@dimen/text_size_exlarge" />

        </TableRow>

        <TableRow
            android:layout_height="0px"
            android:layout_weight="1"
            android:divider="@drawable/dialpad_divider"
            android:showDividers="middle|end|beginning">

            <Button
                android:id="@+id/btn_seven"
                style="@style/DialpadButtonStyle"
                android:text="7"
                android:textSize="@dimen/text_size_exlarge" />

            <Button
                android:id="@+id/btn_eight"
                style="@style/DialpadButtonStyle"
                android:text="8"
                android:textSize="@dimen/text_size_exlarge" />

            <Button
                android:id="@+id/btn_nine"
                style="@style/DialpadButtonStyle"
                android:text="9"
                android:textSize="@dimen/text_size_exlarge" />

        </TableRow>

        <TableRow
            android:layout_height="0px"
            android:layout_weight="1"
            android:divider="@drawable/dialpad_divider"
            android:showDividers="middle|end|beginning">

            <Button
                android:id="@+id/btn_astric"
                style="@style/DialpadButtonStyle"
                android:text="*"
                android:textSize="@dimen/text_size_exlarge"
                android:visibility="invisible" />

            <Button
                android:id="@+id/btn_zero"
                style="@style/DialpadButtonStyle"
                android:text="0"
                android:textSize="@dimen/text_size_exlarge" />

            <Button
                android:id="@+id/btn_hash"
                style="@style/DialpadButtonStyle"
                android:text="#"
                android:textSize="@dimen/text_size_exlarge"
                android:visibility="invisible" />

        </TableRow>

    </TableLayout>

    <Button
        android:id="@+id/btn_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:background="?attr/selectableItemBackground"
        android:text="Cancel" />

</LinearLayout>
